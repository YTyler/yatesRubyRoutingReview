<h2><%= @word.name %></h2>

<% if @word.definitions.any? %>
<ul>
	<% @word.definitions.each do |definition| %>
	<li><%= definition.text %></li>
	<% end %>
</ul>
<% else %>
<p>No Definitions Submitted</p>
<% end %>

<form action="/dictionary/<%=@word.id %>/definitions" method = "post">
	<label for="new_definition">Add Definition</label>
	<input id="new_definition" name="new_definition" class="form-control" type="text">
	<button type="submit" class="btn">Submit</button>
</form>
<br>
<form action="/dictionary/<%= @word.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<button type="submit">Edit Word</button>
</form>
<form action="/dictionary/<%= @word.id %>" method="post">
	<input type="hidden" name="_method" value="delete">
	<button type="submit">Delete Word</button>
</form>
<br>

<a href="/dictionary">Return to Dictionary</a>
